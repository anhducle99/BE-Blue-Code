datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("USER") // "USER" | "ADMIN"
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Department {
  id                 Int      @id @default(autoincrement())
  name               String
  phone              String?
  group              String
  isDepartmentAccount Boolean @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
