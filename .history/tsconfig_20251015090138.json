{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["express"]
  },
  "include": ["src/**/*", "src/@types/**/*"]
}
