{
  "name": "nodejs-sandbox",
  "version": "1.0.0",
  "description": "Node.js example server starter project",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\" && tsc",
    "start": "node dist/index.js",
    "start:socket": "node dist/socketStore.js",
    "start:all": "concurrently \"node dist/index.js\" \"node dist/socketStore.js\"",
    "env:create": "powershell -ExecutionPolicy Bypass -File create-env-files.ps1",
    "env:local": "copy .env.local .env",
    "env:prod": "copy .env.production .env",
    "env:test": "copy .env.test .env",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "dev": "ts-node src/index.ts",
    "dev:app": "ts-node src/index.ts",
    "dev:socket": "ts-node src/socketStore.ts",
    "dev:all": "concurrently \"npm run dev:app\" \"npm run dev:socket\"",
    "dev:local": "npm run env:local && npm run dev:app",
    "dev:prod": "npm run env:prod && npm run dev:app",
    "dev:test": "npm run env:test && npm run dev:app",
    "dev:local:all": "npm run env:local && npm run dev:all",
    "dev:prod:all": "npm run env:prod && npm run dev:all",
    "dev:test:all": "npm run env:test && npm run dev:all",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:studio:test": "copy .env.test .env && prisma studio",
    "prisma:studio:prod": "copy .env.production .env && prisma studio",
    "prisma:push": "prisma db push",
    "prisma:seed": "ts-node src/seed.ts",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:status": "prisma migrate status",
    "prisma:reset": "prisma migrate reset",
    "test:mini-link": "vitest run src/tests/miniAppLinkToken.test.ts",
    "db:backup": "echo 'Run: pg_dump -U postgres -d bluecode > backup_$(date +%Y%m%d_%H%M%S).sql'",
    "db:restore": "echo 'Run: psql -U postgres -d bluecode < backup_file.sql'"
  },
  "keywords": [],
  "author": "Ives van Hoorne",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.14",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.6",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "axios": "^1.13.5",
    "bcrypt": "6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "http": "^0.0.1-security",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
